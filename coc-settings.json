{
  // Do not select first Suggestion
  "suggest.noselect": true,

  // UI
  "suggest.floatConfig": {
    "rounded": true,
    "border": true
  },
  
  // Icons
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "󰠠",
  "diagnostic.warningSign": "",
  "diagnostic.errorSign": "",

  // Popup Suggestion Box Icons
  "suggest.completionItemKindLabels": {
    "text": "󰊄 Text",
    "method": " Method",
    "function": "󰊕 Function",
    "constructor": " Constructor",
    "field": " Field",
    "variable": " Variable",
    "class": " Class",
    "interface": " Interface",
    "module": "󱁻 Module",
    "property": " Property",
    "unit": " Unit",
    "value": " Value",
    "enum": " Enum",
    "keyword": "󱌣 Keyword",
    "snippet": " Snippet",
    "color": "󰉦 Color",
    "file": " File",
    "reference": " Refrence",
    "folder": " Directory",
    "enumMember": " Enum Member",
    "constant": " Constant",
    "struct": " Struct",
    "event": " Event",
    "operator": " Operator",
    "typeParameter": "󰈩 Type Param",
    "default": ""
  },

  // Diagnostic
  "diagnostic.refreshOnInsertMode": true,

  // Check Current Line
  "diagnostic.checkCurrentLine": true,

  // Inlay Hints
  "inlayHint.refreshOnInsertMode": true,

  // Virtual Text
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.virtualTextPrefix": "  ",
  "suggest.virtualText": true,

  // Custom LSP Server ( Dir = '~/.lsp/<langugae>')
  "languageserver": {

    // Lua LSP
    "lua": {
      "command": "~/.lsp/lua/bin/lua-language-server",
      "rootPatterns": [".git"],
      "filetypes": ["lua"]
    }
  }

}
